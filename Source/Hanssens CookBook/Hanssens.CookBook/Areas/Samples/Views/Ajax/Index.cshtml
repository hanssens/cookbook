@{
    ViewBag.Title = "Create Customer Sample";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="#edit-customer" role="button" data-toggle="modal" class="btn btn-primary pull-left">Edit Customer (in Modal)</a>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div id="edit-customer" class="modal hide fade">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h3>Save and Store Partial</h3>
        </div>

        <div class="modal-body" id="edit-directory-listing-body">
                @Html.Partial("_EditCustomer", Model.SelectedContract)
        </div>

        <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Close</button>
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </div>
}


